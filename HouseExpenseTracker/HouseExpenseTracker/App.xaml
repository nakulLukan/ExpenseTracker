<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HouseExpenseTracker"
             xmlns:converter="clr-namespace:HouseExpenseTracker.Converters"
             x:Class="HouseExpenseTracker.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converter:CallerMemberNameConverter x:Key="CallerMemberNameConverter"/>
            <converter:PickTopErrorConverter x:Key="PickTopErrorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
